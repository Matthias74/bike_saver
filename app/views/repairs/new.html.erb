<h2 class="text-center">Quel est votre problème?</h2>
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= simple_form_for(@repair) do |f| %>
        <%= f.error_notification %>

        <%= f.input :category,  collection: [ "Pneu creuvé", "Chaine cassée", "Freins brisés"] %>
        <%= f.input :address, input_html: { value: @address } %>
        <%= f.input :description%>

        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>

